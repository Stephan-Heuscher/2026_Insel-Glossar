rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Glossary terms: anyone can read, authenticated @insel.ch users can write
    match /glossary/{termId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // User profiles: public read, owner write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Quiz questions: anyone can read, authenticated users can write
    match /quizQuestions/{questionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Quiz results: owner read/write
    match /users/{userId}/quizResults/{resultId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
